import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'First app',
      theme: ThemeData(
        primarySwatch: Colors.blue
      ), // ThemeData
    home: MyHomePage(),
    );  // MaterialApp
  }
}

class MyHomePage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('First app'),
      ),  // AppBar
      body: Center(
        child: Column(
          children: [
            Text('Hello'), 
            Text('Hello'), 
            Text('Hello')
          ],
        )  // Column
      ),  // Center
    );  // Scaffold
  }
}
